extends layouts/main
include mixins/videoBlock

block content
    .user-detail-container
        .user-profile
            .user-profile__user
                img.user-avatar(src=user.avatarUrl)
                h2.user-name=user.name
            if loggedUser && user.id === loggedUser.id
                .user-profile__buttons
                    a(href=`${routes.users}${routes.editProfile}`)
                        button ✏️ Edit Profile
                    a(href=`${routes.users}${routes.changePassword}`)
                        button 🔒 Change Password
        .user-header-line
        .user-videos
            each video in user.videos 
                +videoBlock({
                    id:video.id,
                    title:video.title,
                    views:video.views,
                    videoFile:video.fileUrl,
                    creator:null
                })