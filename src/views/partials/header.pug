header.header
    .header__wrapper
        .header__column
            a(href=routes.home)
                i.homeIcon.fab.fa-youtube
                span.homeText WeTube
        .header__column
            form(action=routes.search, method="get")
                input(type="text", placeholder="Search", name="term", value=searchTerm)
        .header__column
            ul
                if !loggedUser
                    li
                        a(href=routes.join) Join
                    li
                        a(href=routes.login) Login 
                else 
                    li
                        a(href=`${routes.videos}${routes.upload}`) Upload
                    li
                        a(href=routes.me) Profile
                    li
                        a(href=routes.logout) Logout
