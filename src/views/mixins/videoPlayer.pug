mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video.video#jsVideo(src=video.src, autoplay)
        .videoPlayer__controls#jsVideoControls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsMuteButton
                    i.fas.fa-volume-up
            .videoPlayer__column
                input.videoPlayer__progressBar#jsProgressBar(type="range", min=0, max=0, step=0.01, value=0)
            .videoPlayer__column
                span
                    span#jsCurrentTime 00:00
                    span.separator /
                    span#jsTotalTime 00:00
            .videoPlayer__column
                span#jsFullScreenButton
                    i.fas.fa-expand