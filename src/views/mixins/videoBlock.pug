mixin videoBlock(video)
    .videoBlock
        a(href=routes.videoDetail(video.id))
            video.videoBlock__thumbnail(src=video.videoFile, controls=false)
            h4.videoBlock__title=video.title
            span.videoBlock__creator=video.creator.name
            span.videoBlock__separator  Â· 
            if video.views === 1
                span.videoBlock__views 1 view
            else
                span.videoBlock__views #{video.views} views 
