extends layouts/main

block content
    p Edit Video
    .form-container
        form(action=routes.videos + routes.editVideo, method="post")
            input(type="test", name="title", placeholder="Title")
            textarea(name="description", placeholder="Description")
            input(type="submit", value="Upload Video")
        a.form-container__link.form-container__link--delete(href=routes.videos + routes.deleteVideo) Delete Video