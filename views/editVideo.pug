extends layouts/main

block content
    p Edit Video
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="test", name="title", placeholder="Title", value=video.title)
            textarea(name="description", placeholder="Description")=video.description
            input(type="submit", value="Edit Video")
        a.form-container__link.form-container__link--delete(href=routes.videos + routes.deleteVideo) Delete Video